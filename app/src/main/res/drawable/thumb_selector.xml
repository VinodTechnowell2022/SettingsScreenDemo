<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/grey" />
            <corners android:radius="@dimen/_10sdp" />
            <size android:width="@dimen/_18sdp" android:height="@dimen/_18sdp" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/main_dark" />
            <corners android:radius="@dimen/_10sdp" />
            <size android:width="@dimen/_18sdp" android:height="@dimen/_18sdp" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
</selector>